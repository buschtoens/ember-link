{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": false,
    "baseUrl": ".",
    "moduleResolution": "nodenext",
    "paths": {
      "test-app/tests/*": [
        "tests/*"
      ],
      "test-app/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}